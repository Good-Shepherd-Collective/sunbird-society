    />

      <a
      href="/forms/contact"
        class="px-2 py-1 h-14 text-sm flex font-medium items-center bg-base-50 text-base-900 outline outline-base-900 dark:outline-base-100 hover:bg-base-950 duration-300 rounded-[calc(var(--card-radius)-var(--card-padding))] dark:bg-base-900 dark:text-white dark:hover:bg-base-800"
      >
        Contact
      </a>
    </div>
  </div>
</div>

<script>
  // JavaScript can be added here if needed for interactivity
  // Example: highlight active page
  document.addEventListener("DOMContentLoaded", function () {
    const menuItems = document.querySelectorAll("button");

    menuItems.forEach((item) => {
      item.addEventListener("click", function () {
        // Remove active class from all buttons
        menuItems.forEach((btn) =>
          btn.classList.remove("text-black", "font-medium")
        );

        // Add active class to clicked button
        this.classList.add("text-black", "font-medium");
      });
    });
  });
</script>