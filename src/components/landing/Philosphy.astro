---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Array
const philosphy = [
  {
    title: "Decolonial Approach",
    description:
      "We center indigenous ways of knowing and challenge colonial narratives by prioritizing community voices and traditional knowledge systems in our documentation work.",
  },
  {
    title: "Community-Centered Practice",
    description:
      "Our work is guided by the communities we serve, ensuring that they maintain ownership and control over their stories, histories, and cultural heritage.",
  },
  {
    title: "Rigorous Methodology",
    description:
      "We employ scholarly research methods while remaining flexible to accommodate diverse cultural protocols and knowledge-sharing traditions.",
  },
  {
    title: "Ethical Stewardship",
    description:
      "We practice responsible archiving with deep respect for sacred knowledge, ensuring appropriate access controls and community consent at every step.",
  },
  {
    title: "Intergenerational Vision",
    description:
      "Our preservation work is designed to serve both current and future generations, creating lasting resources that honor the past while supporting ongoing cultural continuity.",
  },
  {
    title: "Collaborative Spirit",
    description:
      "We work in partnership with historians, community elders, cultural practitioners, and scholars to create comprehensive and authentic historical records.",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div
      class="grid grid-cols-1 sm:grid-cols-3 lg:grid-cols-4 gap-4 overflow-hidden"
    >
      <Text
        tag="h3"
        variant="displayXL"
        data-aos="fade-up"
        data-aos-duration="1000"
        class="dark:text-white text-base-900 font-medium tracking-tighter text-balance"
        >praxis
      </Text>
      <div
        class="flex flex-col sm:col-span-2 lg:col-span-3 divide-y divide-base-200 dark:divide-base-800 border-y border-base-200 dark:border-base-800"
      >
        {
          philosphy.map((process, index) => (
            <div class="  grid grid-cols-1 lg:grid-cols-3 py-4">
              <Text
                tag="h4"
                variant="textBase"
                data-aos="fade-up"
                data-aos-duration="1500"
                class="dark:text-white text-base-900 font-medium tracking-tight text-balance"
              >
                <span>(0{index + 1})</span>
                {process.title}
              </Text>
              <div class="lg:col-span-2 overflow-hidden">
                <Text
                  tag="h4"
                  variant="textBase"
                  data-aos="fade-up"
                  data-aos-duration="2000"
                  class="dark:text-base-400  text-base-600  "
                >
                  {process.description}
                </Text>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>