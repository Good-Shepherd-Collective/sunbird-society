---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// Services Array
const services = [
  {
    title: "Oral History Projects",
    description:
      "We support oral history interviews and projects to capture and preserve the voices, stories, and experiences of community members and indigenous knowledge holders.",
  },
  {
    title: "Digital Archives",
    description:
      "We work with individuals and groups in digital archiving projects create accessible, searchable repositories of historical documents, photographs, recordings, and cultural artifacts.",
  },
  {
    title: "Histography & Research",
    description:
      "We help others engage in rigorous historical research and documentation, exploring untold stories and alternative narratives that challenge conventional historical accounts.",
  },
  {
    title: "Cultural Preservation",
    description:
      "Our philosophy focuses on safeguarding indigenous knowledge systems, traditional practices, and cultural heritage for future generations.",
  },
  {
    title: "Community Engagement",
    description:
      "We collaborate directly with communities to ensure their voices are centered in the documentation and preservation of their own histories and knowledge.",
  },
  {
    title: "Educational Outreach",
    description:
      "Through our own and our parnters' workshops, presentations, and educational programs, we share our findings and methods to promote historical awareness and preservation skills.",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div
      class="grid grid-cols-1 sm:grid-cols-3 lg:grid-cols-4 gap-4 overflow-hidden"
    >
      <Text
        tag="h3"
        variant="displayXL"
        data-aos="fade-up"
        data-aos-duration="1000"
        class="dark:text-white text-base-900 font-medium tracking-tighter text-balance"
      >
        initiatives
      </Text>
      <div
        class="flex flex-col sm:col-span-2 lg:col-span-3 divide-y divide-base-200 dark:divide-base-800 border-y border-base-200 dark:border-base-800"
      >
        {
          services.map((service, index) => (
            <div class="grid grid-cols-1 lg:grid-cols-3 py-4">
              <Text
                tag="h4"
                variant="textBase"
                data-aos="fade-up"
                data-aos-duration="1500"
                class="dark:text-white text-base-900 font-medium tracking-tight text-balance"
              >
                <span>(0{index + 1})</span>
                {service.title}
              </Text>
              <div class="lg:col-span-2 overflow-hidden">
                <Text
                  tag="h4"
                  variant="textBase"
                  data-aos="fade-up"
                  data-aos-duration="2000"
                  class="dark:text-base-400 text-base-600"
                >
                  {service.description}
                </Text>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>