<section class="bg-kotei-800 ">
  <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8 py-20">
    <div class="lg:ml-96 lg:flex lg:w-full lg:justify-end lg:pl-32">
      <div class="mx-auto max-w-lg lg:mx-0 lg:w-0 lg:max-w-xl lg:flex-auto">
        <h1 class="font-display text-5xl tracking-tighter font-medium text-white">
          Contact us
        </h1>
        <p class="mt-4 text-sm text-neutral-200">Please inform us about your requirements, and we can meet to discuss the specifics.
        </p>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:col-span-2 lg:gap-8 mt-8 border-t-2 pt-8 border-kotei-1000/70">
          <div >
            <h3 class="text-base  text-white">Work with us</h3>
            <dl class="mt-3 space-y-1 text-sm leading-6 text-white">
              <div>
                <dt class="sr-only">Email</dt>
                <dd><a class=" text-white/70" href="mailto:collaborate@lexingtonthemes.com">workwithus@lexingtonthemes.com</a></dd>
              </div>

            </dl>
          </div>
          <div >
            <h3 class="text-base  text-white">Press</h3>
            <dl class="mt-3 space-y-1 text-sm leading-6 text-white">
              <div>
                <dt class="sr-only">Email</dt>
                <dd><a class=" text-white/70" href="mailto:press@lexingtonthemes.com">press@lexingtonthemes.com</a></dd>
              </div>

            </dl>
          </div>
          <div >
            <h3 class="text-base  text-white">Join our team</h3>
            <dl class="mt-3 space-y-1 text-sm leading-6 text-white">
              <div>
                <dt class="sr-only">Email</dt>
                <dd><a class=" text-white/70" href="mailto:careers@lexingtonthemes.com">careers@lexingtonthemes.com</a></dd>
              </div>

            </dl>
          </div>
          <div >
            <h3 class="text-base  text-white">Say hello</h3>
            <dl class="mt-3 space-y-1 text-sm leading-6 text-white">
              <div>
                <dt class="sr-only">Email</dt>
                <dd><a class=" text-white/70" href="mailto:hello@lexingtonthemes.com">hello@lexingtonthemes.com</a></dd>
              </div>

            </dl>
          </div>
        </div>

        <form action="#" method="POST" class="mt-8 border-t-2 pt-8 border-kotei-1000/70">
          <div class="grid grid-cols-1 gap-x-8 gap-y-10 sm:grid-cols-2">
            <div>
              <label for="first-name" class="block text-sm  text-neutral-200">First name</label>
              <div class="mt-2.5">
                <input placeholder="Your first name" type="text" name="first-name" id="first-name" autocomplete="given-name" class="block w-full  border-0  px-0 pt-2 pb-8 text-neutral-200  ring-0 focus:ring-0 focus:border-neutral-300 bg-transparent border-kotei-1000/70 border-b-2 placeholder:text-white/30   sm:text-sm sm:leading-6">
              </div>
            </div>
            <div>
              <label for="last-name" class="block text-sm  text-neutral-200">Last name</label>
              <div class="mt-2.5">
                <input placeholder="Your last name" type="text" name="last-name" id="last-name" autocomplete="family-name" class="block w-full  border-0  px-0 pt-2 pb-8 text-neutral-200  ring-0 focus:ring-0 focus:border-neutral-300 bg-transparent border-kotei-1000/70 border-b-2 placeholder:text-white/30   sm:text-sm sm:leading-6">
              </div>
            </div>
            <div class="sm:col-span-2">
              <label for="email" class="block text-sm  text-neutral-200">Email</label>
              <div class="mt-2.5">
                <input placeholder="Your  email" type="email" name="email" id="email" autocomplete="email" class="block w-full  border-0  px-0 pt-2 pb-8 text-neutral-200  ring-0 focus:ring-0 focus:border-neutral-300 bg-transparent border-kotei-1000/70 border-b-2 placeholder:text-white/30   sm:text-sm sm:leading-6">
              </div>
            </div>
            <div class="sm:col-span-2">
              <label for="phone-number" class="block text-sm  text-neutral-200">Phone number</label>
              <div class="mt-2.5">
                <input placeholder="Your phone number" type="tel" name="phone-number" id="phone-number" autocomplete="tel" class="block w-full  border-0  px-0 pt-2 pb-8 text-neutral-200  ring-0 focus:ring-0 focus:border-neutral-300 bg-transparent border-kotei-1000/70 border-b-2 placeholder:text-neutral-300   sm:text-sm sm:leading-6">
              </div>
            </div>
            <div class="sm:col-span-2">
              <label for="message" class="block text-sm  text-neutral-200">Message</label>
              <div class="mt-2.5">
                <textarea placeholder="Your message" name="message" id="message" rows="4" class="block w-full  border-0  px-0 pt-2 pb-8 text-neutral-200  ring-0 focus:ring-0 focus:border-neutral-300 bg-transparent border-kotei-1000/70 border-b-2 placeholder:text-white/30   sm:text-sm sm:leading-6"></textarea>
              </div>
            </div>
          </div>
          <div class="mt-8 flex justify-end">
            <button type="submit" class="flex items-center justify-center  h-12 py-2.5 px-4 border-2 border-neutral-100  text-sm  text-neutra7-100 transition-all  hover:border-kotei-1000  w-full">Send message</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
